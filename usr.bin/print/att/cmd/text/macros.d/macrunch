if [ $# -ne 1 ]
	then echo usage: macrunch ".src name" 
	exit 1
fi

name=$1
sed -e "7,\${
		/^''*\\\\\"/d
		s/	*\\\\\".*//
		s/@//g
		s/^\(['.]\)[ 	]*/\1/
		s/^\\([.'][a-z][a-z]\\)  */\\1/
		s/\\\\{[ 	]*/\\\\{/g
	    } " \
	${name}.src >  ${name}
